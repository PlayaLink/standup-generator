{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
  "manifestVersion": "1.17",
  "version": "1.0.0",
  "id": "{{MICROSOFT_APP_ID}}",
  "developer": {
    "name": "Your Company",
    "websiteUrl": "https://your-app-url.com",
    "privacyUrl": "https://your-app-url.com/privacy",
    "termsOfUseUrl": "https://your-app-url.com/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Weekly Standup",
    "full": "Weekly Standup Generator"
  },
  "description": {
    "short": "Generate weekly standup reports from Jira",
    "full": "Connect your Jira account and generate AI-powered weekly standup reports based on your ticket activity. Simply message the bot with 'standup' to get your personalized report."
  },
  "accentColor": "#5558AF",
  "bots": [
    {
      "botId": "{{MICROSOFT_APP_ID}}",
      "scopes": ["personal", "team", "groupChat"],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": ["personal"],
          "commands": [
            {
              "title": "setup",
              "description": "Connect your Jira account and select a board"
            },
            {
              "title": "standup",
              "description": "Generate your weekly standup report"
            },
            {
              "title": "help",
              "description": "Show available commands"
            }
          ]
        }
      ]
    }
  ],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": [
    "your-app-url.vercel.app",
    "*.atlassian.net"
  ],
  "webApplicationInfo": {
    "id": "{{MICROSOFT_APP_ID}}",
    "resource": "api://your-app-url.vercel.app/{{MICROSOFT_APP_ID}}"
  }
}
